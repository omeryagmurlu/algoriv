    "lodash.mapvalues": "^4.6.0",
    "lodash.pickby": "^4.6.0",
    "material-ui": "^0.18.0",
    "prop-types": "^15.5.6",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-hot-loader": "next",
    "react-tap-event-plugin": "^2.0.1",
    "sigma": "^1.2.0",

    "babel-core": "^6.24.1",
    "babel-eslint": "^7.2.1",
