{
  "name": "tsa-software",
  "productName": "Graph Algorithms",
  "version": "1.0.0",
  "description": "Visualization of Graph Algorithms",
  "main": "main.js",
  "scripts": {
    "start"             : "yarn run start:prod",
    "start:node"        : "electron main.js",
    "start:browser"     : "http-server",

    "watch:browser"     : "yarn run build:dev:browser && TARGET=browser NODE_ENV=dev webpack-dev-server --open",

    "build"             : "yarn run build:prod",
    "build:dev"         : "yarn run build:dev:node",
    "build:prod"        : "yarn run build:prod:node",
    "build:dev:node"    : "TARGET=node NODE_ENV=dev webpack",
    "build:prod:node"   : "TARGET=node NODE_ENV=production webpack",
    "build:dev:browser" : "TARGET=browser NODE_ENV=dev webpack",
    "build:prod:browser": "TARGET=browser NODE_ENV=production webpack"
  },
  "author": "Omer Erdinc Yagmurlu",
  "license": "MIT",
